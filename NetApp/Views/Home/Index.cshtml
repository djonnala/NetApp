        <div class="row">


            <div class="carousel slide" id="MostPopularitems" data-ride="carousel" data-interval="0">
                @if (Model.modeldata.Count > 0)
                {
                    <h2>Most Popular Items</h2>
                }
                <div class="carousel-inner">

                    @for (int i = 0; i < Model.modeldata.Count; i = i + 4)
                    {
                        if (i == 0)
                        {
                            <div class="item active">
                                @for (int j = i; j < i + 4 && j < Model.modeldata.Count; j++)
                                {
                                    <div class="col-sm-1 col-lg-3 col-md-3 thumbnail">
                                            <a href="@Url.Action("About", "Home",new { id = Model.modeldata[j].ProductID })">
                                                <img src="data:image;base64,@System.Convert.ToBase64String(Model.modeldata[j].ProductPhoto)" />
                                            </a>
                                            <div class="caption">
                                                
                                                <h4>
                                                    <a href="@Url.Action("About", "Home",new { id = Model.modeldata[j].ProductID })">@Model.modeldata[j].Name</a>
                                                </h4>
                                                <h4>$@Model.modeldata[j].ListPrice.ToString("0.00")</h4>
                                            </div>

                                    </div>
                                }
                            </div>
                        }
                        if (i != 0)
                        {
                            <div class="item">
                                @for (int j = i; j < i + 4 && j < Model.modeldata.Count; j++)
